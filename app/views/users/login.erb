<div class="container">
  <h1>LOGIN:</h1>
  <div class="errors">
   <% if @login_error %>
     <ul>Please validate your Username or Password!</ul>
   <% end %>
  </div>

  <form class="form-horizontal" action="/login" method="post">

    <div class="form-group">
      <label for="user_email" class="control-label">eMail: </label>
      <input class="form-control" id="user_email" type="text" name="user[email]">
    </div>

    <div class="form-group">
      <label for="user_password" class="control-label">Password: </label>
      <input class="form-control" id="user_password" type="password" name="user[password]">
    </div>

    <button class="btn btn-primary" type="submit" value="Login">SUBMIT</button>

    <a class="btn btn-danger" href='/users/new'>REGISTER</a>
  </form>
</div>
