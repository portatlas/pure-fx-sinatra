<div class="container">
<h1>Welcome <%= @user.first_name %> <%= @user.last_name %>!</h1>

<a href="/fxtrans/new">Create an FX Request</a>

<h3>OPEN FX's REQUEST</h3>
  <table>
    <tr>
      <th>ID</th>
      <th>ZIPCODE</th>
      <th>AMOUNT</th>
      <th>HAVE</th>
      <th>WANT</th>
      <th>AT</th>
      <th>FOR</th>
      <th>STATUS</th>
    </tr>
      <% @user.fxrequests.length.times do |num| %>
    <tr>
      <td><%= @user.fxrequests[num].id %> </td>
      <td><%= @user.fxrequests[num].zipcode %></td>
      <td><%= @user.fxrequests[num].amount %></td>
      <td class="source"><%= @user.fxrequests[num].curr_sell %></td>
      <td class="quote"><%= @user.fxrequests[num].curr_buy %></td>
      <td><%= @fx_rates[num] %></td>
      <td><%= @converted_vals[num] %></td>
      <td><%= @user.fxrequests[num].status %></td>
    </tr>
    <% end %>
  </table>

<h3>MATCHED FX's</h3>
  <table>
    <tr>
      <th>ID</th>
      <th>ZIPCODE</th>
      <th>USER</th>
      <th>AMOUNT</th>
      <th>HAVE</th>
      <th>WANT</th>
      <th>RATE</th>
      <th>EMAIL</th>
    </tr>
    <% @fxmatches.length.times do |num| %>
    <tr>
      <td><%= @fxmatches[num].id %> </td>
      <td><%= @fxmatches[num].zipcode %></td>
      <td class="requestor"><%= @fxmatches[num].requestor.first_name %></td>
      <td><%= @fxmatches[num].amount %></td>
      <td class="source"><%= @fxmatches[num].curr_sell %></td>
      <td class="quote"><%= @fxmatches[num].curr_buy %></td>
      <td><%= (1 / ((@fx_rates[num].fractional)/100.00)).round(2) %></td>
      <td class="requestor"><%= @fxmatches[num].requestor.email %></td>
    </tr>
    <% end %>
  </table>
  <br>

